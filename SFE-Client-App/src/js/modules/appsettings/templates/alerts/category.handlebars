<div class="alerts-category well" data-category="{{category}}">
    <h6>{{prettyCategory}}s</h6>

    <div class="row alerts-category-selectors">
        {{#if isDesktopClient}}
        <div>
            <div class="field field-show-notification" data-path-name="showNotification">
                <span class="checkbox">
                    <input type="checkbox" {{#if showNotification}}checked{{/if}}>
                    <span></span>
                </span>
                Desktop alerts
            </div>
            <div class="field field-persist" data-path-name="persist">
                <span class="checkbox">
                    <input type="checkbox" {{#if persist}}checked{{/if}}>
                    <span></span>
                </span>
                Persist Desktop alerts
            </div>
            <div class="field field-blink" data-path-name="blink">
                <span class="checkbox">
                    <input type="checkbox" {{#if blink}}checked{{/if}}>
                    <span></span>
                </span>
                Blink Desktop alerts
            </div>
        </div>
        {{/if}}
        <div>
            <div class="field field-show-stream-alerts" data-path-name="showStreamAlerts">
                <span class="checkbox">
                    <input type="checkbox" {{#if showStreamAlerts}}checked{{/if}}>
                    <span></span>
                </span>
                Blink Sidebar Alerts
            </div>
            <div class="field field-play-sound" data-path-name="playSound">
                <span class="checkbox">
                    <input type="checkbox" {{#if playSound}}checked{{/if}}>
                    <span></span>
                </span>
                Play Sounds
            </div>
        </div>
        <div>
            <div class="field field-notification-color">
                <input type="text">
            </div>
        </div>
    </div>
    <div class="row alerts-category-buttons">
        {{#if isDesktopClient}}
        <div class="field field-show-example">
            <button class="button action">Show Example</button>
        </div>
        {{/if}}
        <div class="field field-restore-defaults">
            <button class="button action">Restore Defaults</button>
        </div>
        <div class="field field-exceptions">
            <button class="button action {{#if hasExceptions}}action{{else}}disabled{{/if}}"{{#unless hasExceptions}}disabled{{/unless}}>Exceptions</button>
        </div>
    </div>
</div>